<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yongliang.schoolyeartracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SchoolYearTracker">
        <receiver
            android:name=".views.MyReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name=".views.AssessmentActivity"
            android:exported="false" />
        <activity
            android:name=".views.AddCourse"
            android:exported="false"
            android:label="Create a New Course" />
        <activity
            android:name=".views.CourseActivity"
            android:exported="false"
            android:label="Courses for This Term" />
        <activity
            android:name=".views.AddTerm"
            android:exported="false"
            android:label="@string/AddTerm" />
        <activity
            android:name=".views.TermActivity"
            android:exported="false"
            android:label="@string/TermTracker" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>